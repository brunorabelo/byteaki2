<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:text="Criando a notificação" />

    <AutoCompleteTextView
        android:id="@+id/title_notification"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:hint="O que você quer avisar?" />

    <AutoCompleteTextView
        android:id="@+id/Ask_Title_Notification"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:hint="Quais os detalhes?" />


    <ListView
        android:id="@+id/Ask_Group"
        android:layout_width="337dp"
        android:layout_height="65dp"
        android:layout_weight="0.12" />

    <Button
        android:id="@+id/enviar_notificacao"
        android:text="Enviar"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        ></Button>

</LinearLayout>