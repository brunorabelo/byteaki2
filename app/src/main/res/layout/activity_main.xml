<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.byteaki.byteaki.UI.MainActivity">


    <Button
        android:id="@+id/viewgroups"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:text="Ver Grupos"
        android:theme="@style/ThemeOverlay.MyDarkButton"/>

    <Button
        android:id="@+id/makegroup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Criar Grupo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/sendnotification"
        android:layout_alignStart="@+id/sendnotification"
        android:theme="@style/ThemeOverlay.MyDarkButton"/>

    <Button
        android:id="@+id/sendnotification"
        android:text="Enviar notificacao"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/logout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/ThemeOverlay.MyDarkButton"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="LOGOUT"
        android:layout_below="@+id/viewgroups"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"/>
</RelativeLayout>